<div class="panel panel-default">
  <div class="panel-heading">
    <h4>
     <strong><%= @category.name %></strong> Kategorisindeki İlanlar
   </h4>
  </div>
  <div class="panel-body">
    <% @category.notices.each do |notice| %>
      <div class="row">
        <div class="col-md-1 col-sm-1">
          <img src="http://lorempixel.com/50/50/">
        </div>
        <div class="col-md-11 col-sm-11">
          <div class="notice">
            <strong><%= link_to notice.title, notice_path(notice) %></strong>
            <div class="meta">
            	<%= link_to notice.user.full_name, profile_path(notice.user.profile) %> - <%= link_to time_ago_in_words(notice.created_at) + " önce", notice %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>