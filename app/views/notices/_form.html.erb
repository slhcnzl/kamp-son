 <%= simple_form_for(@notice) do |f| %>
    <%= f.input :title, label: "Başlık:", placeholder: "Lütfen başlık giriniz!" %>
    <%= f.input :message, label: "İlan İçeriği" %>
    <%= f.association :categories, label: "Kategori seçiniz" %>
    <%= f.input :noticeimage, label: "İlan Resmi" %>
    <%= f.button :submit, "Gönder", :class => "btn btn-primary" %>
<% end %>